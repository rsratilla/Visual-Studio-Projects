@{
    ViewBag.Title = "Dialog Example";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

<div id="exampleDialog" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">&times;</a>

        <h3>Dialog Title</h3>
    </div>
    <div class="modal-body">
        Dialog Text
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-primary" data-dismiss="modal">Yes</a>
        <a href="#" class="btn" data-dismiss="modal">No</a>
    </div>
</div>

<p>
    Press the button below<br />
    <br />
    <a class="btn btn-info" data-toggle="modal" href="#exampleDialog">Show Popup</a>
</p>

@model IEnumerable<Sayts.Models.Battery>

@{
    ViewBag.Title = "Index";
}

<h2>Battery Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sites.SiteCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Units.BrandModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitStatus.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDelivered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateInstalled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Sites.SiteFullName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Units.BrandModel)
            </td>
            <td>
                @Html.DisplayFor(model => item.UnitStatus.Status)
            </td>
            <td>
                @Html.DisplayFor(model => item.DateDelivered)
            </td>
            <td>
                @Html.DisplayFor(model => item.DateInstalled)
            </td>
            <td>
                @Html.DisplayFor(model => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(model => item.UpdateDate)
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Inventory Report Summary Home Page", "Index", "InventoryReportSummary", null, null)
</p>


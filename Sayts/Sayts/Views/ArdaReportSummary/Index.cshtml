
@{
    ViewBag.Title = "Arda Report Summary";
}

<h2>Arda Report Summary</h2>

<p></p>

@using (Html.BeginForm("Index", "ArdaReportSummary", FormMethod.Get))
{
    <div class="form-group">
        <div class="radio-inline">
            @Html.RadioButton("countby", "Category", true, new { countby = "Category" }) Category
        </div>
        <div class="radio-inline">
            @Html.RadioButton("countby", "Item", false, new { countby = "Item" }) Item
        </div>
        <div class="radio-inline">
            @Html.RadioButton("countby", "Site", false, new { countby = "Site" }) Site
        </div>
        <div class="radio-inline">
            @Html.RadioButton("countby", "Cluster", false, new { countby = "Cluster" }) Cluster
        </div>
        <div class="radio-inline">
            @Html.RadioButton("countby", "SiteOwner", false, new { countby = "SiteOwner" }) SiteOwner
        </div>
        <div class="radio-inline">
            @Html.RadioButton("countby", "Status", false, new { countby = "Status" }) Status
        </div>
        <div>
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

<p></p>

<p>
    @Html.ActionLink("Export All to Excel", "ExportToExcel")
</p>



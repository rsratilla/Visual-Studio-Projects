@model IEnumerable<Sayts.Models.ClusterSiteCTGroup>

@{
    ViewBag.Title = "Caretaker Report Summary";
}

<h2>Caretaker Report Summary</h2>

<table>
    <tr>
        <th>
            Cluster
        </th>
        <th>
            CT Count
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClusterNo)
            </td>
            <td>
                @item.CTCount
            </td>
            <td>
                @Html.ActionLink("View Details in Browser", "Details", new { id = item.ClusterNo })
            </td>
        </tr>
    }
</table>

<p>
    &nbsp;
</p>

<p>
    @Html.ActionLink("View All Details in Browser", "Index", "Caretakers", null, null)
</p>

<p>
    @Html.ActionLink("Export All to Excel", "ExportToExcel")
</p>

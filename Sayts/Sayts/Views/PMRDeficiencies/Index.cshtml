@model IEnumerable<Sayts.Models.PMRDeficiency>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.PMRMasterID }) |
    @Html.ActionLink("Back to Master List", "Index", "PMRMasters", null, null)
</p>
<table class="table">
    <tr>
        <th>
            Site
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PMRCheckLists.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PMRCheckLists.Particular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PMRMasters.Sites.SiteFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PMRCheckLists.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PMRCheckLists.Particular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PMRDeficiencyID, mid = ViewBag.PMRMasterID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PMRDeficiencyID }) |
            @Html.ActionLink("Add Picture", "Upload", new { id = item.PMRDeficiencyID }) |
            @Html.ActionLink("View Picture", "View", new { id = item.PMRDeficiencyID })
        </td>
    </tr>
}

</table>
